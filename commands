Использованные команды в терминале:
\d имя_таблицы - вывод информации (полей) таблицы
\dt - вывод списка отношений таблиц

Команды для работа с бд:
SELECT * FROM имя_таблицы; //вывод всего содержимого таблицы по столбцам

SELECT *
WHERE имя_поля='искомое_значение'; //поиск по условию

SELECT *
FROM имя_таблицы WHERE имя_поля IN ('множественное', 'искомое','значение'); //поиск по нескольким условиям

SELECT * FROM имя_таблицы
WHERE имя_поля IN (SELECT DISTINCT имя_поля FROM имя_поля WHERE имя_поля='искомое_значение'; //поиск уникального содержимого с условием

SLECT * FROM имя_таблицы WHERE имя_поля LIKE 'примерное_значение'; //поиск по маске 



ALTER TABLE имя_таблицы RENAME COLUMN имя_поля TO новое_имя_поля; //изменение имени поля

ALTER TABLE имя_таблицы RENAME TO новое_имя_поля; //изменениеи имени таблицы

UPDATE имя_таблицы SET имя_поля = REPLACE(имя_поля, 'содержимое', 'новое_содержимое'); //замена содержимого поля

ALTER TABLE имя_таблицы  //добавление поля
  ADD COLUMN имя_поля;

ALTER TABLE имя_таблицы  //удаление поля
  DROP COLUMN имя_поля;
